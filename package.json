{
  "name": "what-i-did-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:backend": "pnpm --dir Backend start:dev",
    "start:frontend": "pnpm --dir Frontend dev",
    "dev": "concurrently \"pnpm:start:backend\" \"pnpm:start:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"cyan,magenta\"",
    "build": "pnpm --dir Backend build && pnpm --dir Frontend build",
    "start:prod": "pnpm --dir Backend start:prod"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}